{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "rootDir": "..",
        "outDir": "../build",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"]
    },
    "include": [
        "./**/*.ts"
    ]
}